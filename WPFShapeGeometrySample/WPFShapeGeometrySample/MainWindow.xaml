<Window x:Class="WPFShapeGeometrySample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFShapeGeometrySample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="CombinedMode" Height="30" Width="200" VerticalAlignment="Top" 
                  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,25,0,0" FontSize="18"  SelectedItem="{Binding CurrentCombineMode}"/>
        <Path x:Name="CombinedPath" Stroke="Blue"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
